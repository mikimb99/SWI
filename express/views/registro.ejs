  <body class="text-center">
<main class="form-signin border border-light rounded">
  <form method="POST" action="/" class="p-1">
    <h1 class="h1 mb-5 fw-normal">Registro</h1>
    <div class="form-floating">
      <input type="text" class="form-control form-top" id="nombre-input" name="name" placeholder="Nombre" required="true">
      <label for="nombre-input">Nombre</label>
    </div>
    <div class="form-floating">
      <input type="email" class="form-control form-middle" id="email-input" name="email" placeholder="email" required="true">
      <label for="email-input">Email</label>
    </div>
    <div class="form-floating">
      <input type="password" class="form-control form-middle" name="pass" id="password1-input" placeholder="Contraseña" required="true">
      <label for="password1-input">Contraseña</label>
    </div>
    <div class="form-floating">
      <input type="password" class="form-control form-bottom" name="pass2" id="password2-input" placeholder="Repita la contraseña" required="true">
      <label for="password2-input">Repetir Contraseña</label>
    </div>
    <button class="w-100 btn btn-lg btn-primary" type="submit">Registrarse</button>
  </form>
</main>


    
  

